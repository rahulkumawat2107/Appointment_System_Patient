<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Confirmation">

    <RelativeLayout
        android:id="@+id/rr"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#023FBE">

        <ImageButton
            android:layout_marginTop="5dp"
            android:id="@+id/back_appt"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_navigate_before_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent">

        </ImageButton>

        <ImageView
            android:id="@+id/a"
            android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
                android:src="@drawable/confirm_tick">
        </ImageView>

       <TextView
           android:id="@+id/b"
           android:layout_marginTop="9dp"
           android:layout_below="@+id/a"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#fff"
           android:fontFamily="@font/googlesansregular"
           android:text="Booking Confirmed!"
           android:textStyle="bold"
           android:textSize="14sp"
           android:layout_centerHorizontal="true"
        ></TextView>

        <TextView
            android:id="@+id/c"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/b"
            android:layout_width="wrap_content"
            android:fontFamily="@font/googlesansregular"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Date and Time"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            ></TextView>

        <TextView
            android:id="@+id/date_time"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/c"
            android:fontFamily="@font/googlesansregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="11:30 AM, 9 Apr’20 "
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            ></TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/rr"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:background="@drawable/token"
        android:layout_height="52dp">

        <TextView
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="#000"
            android:fontFamily="@font/googlesansregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Token No. ">

        </TextView>

        <TextView
            android:id="@+id/token_no"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:fontFamily="@font/googlesansregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5">

        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/done">

        <TextView
            android:gravity="center_horizontal"
            android:fontFamily="@font/googlesansregular"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Amount to be paid on your visit "
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            ></TextView>
        <TextView
            android:gravity="center_horizontal"
            android:fontFamily="@font/googlesansregular"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="₹ 300"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            ></TextView>

    </LinearLayout>


    <Button
        android:id="@+id/done"
        android:fontFamily="@font/googlesansregular"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:text="DONE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/submit"
        ></Button>




</RelativeLayout>